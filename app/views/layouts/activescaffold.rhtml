<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
	<title>BagLock</title>
	<%= javascript_include_tag :defaults %>
	<%= active_scaffold_includes %>
	<%= dhtml_calendar_includes %>
	<%= stylesheet_link_tag 'active_scaffold_overrides' %>
	<%= stylesheet_link_tag('print', :media => :print) %>
<body>
<table id="app-links-table">
<tr>
<td class="link-footer"><a class="app-link" href="item">Backlog</a></td>
<td class="link-footer"><a class="app-link" href="task">Tasks</a></td>
<td class="link-footer"><a class="app-link" href="sprint">Sprints</a></td>
<td class="link-footer"><a class="app-link" href="developer">Developers</a></td>
</tr>
<tr>
<td class="global-action" colspan="4">
<% print (@session[:user_id]); print ("\n--------------------------\n") %>
<% if not @session[:user_id] %>
<a class="app-link" href="account/login">Login</a> |
<a class="app-link" href="account/signup">Signup</a>
<% else %>
<a class="app-link" href="account/logout">Logout</a>
<% end %>
</td>
</tr>
</table>

   <%= yield %>

</body>
</html>
